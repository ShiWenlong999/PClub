<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>PClub</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <!-- 注册servlet -->
  <servlet>
    <servlet-name>regist</servlet-name><!-- servlet名称 -->
    <servlet-class>servlet.Regist</servlet-class><!-- 类路径 -->
  </servlet>
  <servlet-mapping>
    <servlet-name>regist</servlet-name><!-- servlet名称同上面一样 -->
    <url-pattern>/regist</url-pattern><!-- 前端请求时候的url -->
  </servlet-mapping>
  <!-- 登录servlet -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>servlet.Login</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>